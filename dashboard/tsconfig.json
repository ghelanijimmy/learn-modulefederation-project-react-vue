{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "composite": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@mf/auth": ["../auth"],
      "@mf/marketing": ["../marketing"],
      "@mf/container": ["../container"],
    }
  },
  "references": [
    {"path": "../auth/tsconfig.json"},
    {"path": "../marketing/tsconfig.json"},
    {"path": "../container/tsconfig.json"}
  ],
  "include": ["src/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}